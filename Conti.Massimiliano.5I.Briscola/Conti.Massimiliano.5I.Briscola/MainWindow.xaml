    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="Immagini/sfondo.jpg" />
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="0">
            <Image Height="100" Width="60" Margin="5" Source="Immagini/retro.png" Name="btnCPU1" />
            <Image Height="100" Width="60" Margin="5" Source="Immagini/retro.png" Name="btnCPU2" />
            <Image Height="100" Width="60" Margin="5" Source="Immagini/retro.png" Name="btnCPU3" />
        </StackPanel>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Grid.Row="1">
            <StackPanel Orientation="Vertical">
                <Label Content="" Name="lblNcarte" FontSize="12"/>
                <Label Name="lblSemeBriscola" />
            </StackPanel>
            <Image Height="120" Width="80" Margin="3" Name="btnMazzo" />
            <Image Height="100" Width="60" Margin="3" Name="btnBriscola"/>

        </StackPanel>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="1">
            <Image Height="100" Width="60" Margin="5" Name="btnCentro1"/>
            <Image Height="100" Width="60" Margin="5" Name="btnCentro2"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Row="1">
            <Label Content="" Name="lblVinto" />
        </StackPanel>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="2">
            <Image Height="100" Width="60" Margin="5" Name="btnCarta1" Source="Immagini/retro.png" MouseDown="btnCarta1_MouseDown" />
            <Image Height="100" Width="60" Margin="5" Name="btnCarta2" Source="Immagini/retro.png" MouseDown="btnCarta2_MouseDown" />
            <Image Height="100" Width="60" Margin="5" Name="btnCarta3" Source="Immagini/retro.png" MouseDown="btnCarta3_MouseDown" />
        </StackPanel>

        <StackPanel Orientation="Vertical" HorizontalAlignment="Right" Grid.Row="2">
            <TextBlock Text="Punti di " FontSize="20" Width="125" />
            <TextBlock Text="" Width="100" FontSize="20" Name="txtPuntiGiocatore" />
            <Button Name="bbbtn" Content="Vai all'ultimo turno" Click="Button_Click_1" />
        </StackPanel>

        <StackPanel Orientation="Vertical" HorizontalAlignment="Right" Grid.Row="0">
            <TextBlock Text="Punti di " FontSize="20" Width="125" />
            <TextBlock Text="" Width="100" FontSize="20" Name="txtPuntiCPU" />
        </StackPanel>
